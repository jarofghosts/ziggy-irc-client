<div id="TAB_ROOM">
	
	<span class="leftColumn">
		{{#each messages}}<span class="username message {{this.flag}}">{{this.nick}}</span>{{/each}}
	</span>
	<span class="rightColumn">
		{{#each messages}}<span class="text message {{this.flag}}">{{this.text}}</span>{{/each}}
	</span>

</div>

<div id="partial_input"></div>

