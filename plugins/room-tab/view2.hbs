<form id="{{id}}">

	{{#if alert}}<div class="alert {{alert.flag}}">{{alert.message}}</div>{{/if}}

	<div> 
		<input type="text" id="formNick" placeholder="nick" value ={{nick}}>  
	</div>

	<div> 
		<input type="text" id="formServer" placeholder="server" value="irc.freenode.net">  
	</div>

	<div> 
		<input type="text" id="formChannel" placeholder="channel" value="#learnjavascript">  
	</div>

	<div> 
		<span id="roomSubmit">submit</span> 
	</div>

</form>
	
<style>

#{{id}} .alert {
	padding: 10px;
}
#{{id}} .alert.warning {
	background: #FFEFA2;
}
#{{id}} .alert.error {
	background: #EEB0B6;
}

#{{id}} {
	text-align: center;
	padding-top: 3%;
}
#{{id}} div {
	margin: 20px;
}
#{{id}} input{
	color:#696969;
	background-color: #EDEDED;
	border: solid 1px #B1B1B1;
	width: 400px;
	height: 60px;
	outline: none;
	padding: 0 20px;
	border: 0;
}
#{{id}} #roomSubmit {
	color: #6B6B6B;
	line-height: 60px;
	display: inline-block;
	width: 400px;
	height: 60px;
	background-color: #EDEDED;
	cursor: pointer;
}
#{{id}} #roomSubmit:hover {
	background-color: #A7A7A7;
}

</style>